# Copy to .env and fill in values (never commit .env)
PORT=3000

# Prisma (Postgres)
# Example (Neon/Supabase):
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"

# Optional: where uploaded images are stored (useful on hosting with a persistent disk)
# UPLOAD_DIR="C:\\path\\to\\uploads" (Windows) or "/var/data/uploads" (Linux)
# UPLOAD_DIR=

# Auth/session
SESSION_SECRET="change-me-in-production"

# Payments
# PAYMENT_PROVIDER can be:
# - fake (dev demo, no webhook/ngrok needed)
# - razorpay (real payments)
PAYMENT_PROVIDER=fake

# Google OAuth (required for login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Admin access
# Comma-separated list of emails that should become ADMIN when signing in with Google.
ADMIN_EMAILS=

# Razorpay (optional; required for /create-payment and /payment-webhook)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Where Razorpay redirects after payment
RAZORPAY_CALLBACK_URL=http://localhost:3000/invoice.html
